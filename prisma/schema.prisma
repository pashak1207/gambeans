generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Users {
  id                Int          @unique @default(autoincrement())
  name              String?
  phone             String
  email             String?
  role              Users_role   @default(USER)
  status            User_status  @default(ACTIVE)
  DOB               DateTime?
  avatar            String
  daily_code        String?
  cafe_id           Int
  verification_code String
  updated_at        DateTime     @updatedAt
  created_at        DateTime     @default(now())
  prizes            User_prize[]
  cafe              Cafes        @relation(fields: [cafe_id], references: [id])
  visits            Visits[]

  @@id([phone, cafe_id])
}

model Cafes {
  id            Int         @id @default(autoincrement())
  name          String
  email         String      @unique
  address       String?
  logo          String
  color         String
  send_phone    String      @unique
  ftw           Int
  link_eng      String?     @unique
  link_heb      String?     @unique
  env_version   Env_version @default(en)
  contact_phone String?
  contact_name  String?
  daily_code    String
  created_at    DateTime    @default(now())
  prizes        Prizes[]
  users         Users[]
  visits        Visits[]
}

model Visits {
  id         Int      @id @default(autoincrement())
  user_id    Int
  cafe_id    Int
  visit_date DateTime @default(now())
  cafe       Cafes    @relation(fields: [cafe_id], references: [id])
  user       Users    @relation(fields: [user_id], references: [id])
}

model User_prize {
  id          Int       @id @default(autoincrement())
  prize_id    Int
  used        DateTime?
  opened      DateTime?
  is_won      Boolean   @default(false)
  is_slot_won Boolean   @default(true)
  user_id     Int
  created_at  DateTime  @default(now())
  expires_at  DateTime?
  prize       Prizes    @relation(fields: [prize_id], references: [id])
  user        Users     @relation(fields: [user_id], references: [id])
}

model Prizes {
  id             Int          @id @default(autoincrement())
  cafe_id        Int
  max_amount     Int
  current_amount Int
  text           String
  image          String
  step_image     String
  type           Prize_type
  cost           Float
  revenue        Float
  probability    Float
  is_active      Boolean      @default(false)
  expires_at     Int          @default(1)
  created_at     DateTime     @default(now())
  cafe           Cafes        @relation(fields: [cafe_id], references: [id])
  users          User_prize[]
}

enum Users_role {
  ADMIN
  SUPERADMIN
  USER
}

enum User_status {
  ACTIVE
  BLOCKED
}

enum Prize_type {
  SCRATCH
  SLOT
  FIRST
  FREE
}

enum Env_version {
  he
  en
}
